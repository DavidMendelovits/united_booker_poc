run = "npm run dev"
hidden = [".build", ".config"]
modules = ["bash", "nix", "nodejs-20"]

[nix]
channel = "stable-24_05"

[env]
CHROME_BIN = "/usr/bin/google-chrome"

[packager]
language = "nodejs"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "gce"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 5378351
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"
